{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "NodeNext", // ESM-compatible resolution
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": [
      "ES2020"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
  },
  "ts-node": {
    "esm": true,
    "transpileOnly": true
  },
  "include": [
    "src",
  ]
}